<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="5dp"
        app:cardCornerRadius="10dp">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/pro"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:theme="@style/AppTheme.primary"
                android:visibility="invisible" />


            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                app:drawableLeftCompat="@drawable/ic_baseline_account_orders"
                app:drawableStartCompat="@drawable/ic_baseline_account_orders" />


            <TextView
                android:id="@+id/phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_name"
                android:layout_margin="5dp"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_baseline_phone"
                app:drawableStartCompat="@drawable/ic_baseline_phone_orders" />

            <TextView
                android:id="@+id/time_stamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/phone"
                android:layout_margin="5dp"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_baseline_access_time_24"
                app:drawableLeftCompat="@drawable/ic_baseline_access_time_24" />


            <TextView
                android:id="@+id/mtracker_id"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_below="@id/time_stamp"
                android:layout_alignParentLeft="true"
                android:visibility="invisible"
                android:layout_toLeftOf="@id/dish_logo"
                android:textColor="@color/text_color"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@id/dish_logo" />


            <TextView
                android:id="@+id/Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:layout_toStartOf="@+id/user_name"
                android:layout_toLeftOf="@+id/user_name"
                android:textColor="#91FF22"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/item_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/Status"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:textColor="@color/text_color"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/dish_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_count"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:src="@drawable/notify_black" />


            <TextView
                android:id="@+id/vendor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />


            <TextView
                android:id="@+id/vendor_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</RelativeLayout>