<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/food_img"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_launcher_background" />


            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyle"
                android:layout_margin="35dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:theme="@style/AppTheme.primary" />



            <TextView
                android:id="@+id/food_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_toEndOf="@id/food_img"
                android:layout_toRightOf="@id/food_img"
                android:text="One is one the way"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/food_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/food_name"
                android:layout_margin="2dp"
                android:layout_toEndOf="@id/food_img"
                android:layout_toRightOf="@id/food_img"
                android:text="One is one the way"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/food_quantity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/food_price"
                android:layout_margin="2dp"
                android:layout_toEndOf="@id/food_img"
                android:layout_toRightOf="@id/food_img"
                android:text="One is one the way"
                android:textStyle="bold" />



            <TextView
                android:id="@+id/time_stamp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/food_quantity"
                android:layout_margin="2dp"
                android:layout_toEndOf="@id/food_img"
                android:layout_toRightOf="@id/food_img"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="One is one the way"
                android:visibility="gone" />

            <TextView
                android:id="@+id/vendor_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="One is one the way"
                android:visibility="gone" />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</RelativeLayout>